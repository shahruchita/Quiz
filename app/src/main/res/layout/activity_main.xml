<?xml version="1.0" encoding="utf-8"?>


<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ruchita.quiz.MainActivity"
    tools:showIn="@layout/main"
    android:background="#000000">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.example.ruchita.quiz.MainActivity"
    android:background="#f9e5af">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:layout_marginTop="29dp"
        android:background="#f9e5af"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#731e11"

        android:textSize="35sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="60dp"
        android:hint="@string/name"
        android:inputType="text"
        android:textColor="#000000"
        android:gravity="left"
        android:textStyle="italic"
        android:textSize="27sp"

       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/play"
        android:layout_gravity="center_vertical"


        android:background="#efa36f"
        android:textColor="#151313"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/instructions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:id="@+id/instructions"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="bottom"
        android:background="#efa36f"
        android:textColor="#1a1515"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>